<h2>Pollas</h2>
<hr>
<div class="row">
<div class="col-ld-8">
  <table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Usuario</th>
      <th>Puntaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
    <% @pollas.each do |polla| %>
      <tr>
        <td><%= polla.id %></td>
        <td><%= polla.user.name %></td>
        <td><%= polla.score %></td>
    </tr>
    <% end %>
    </tbody>
</table>