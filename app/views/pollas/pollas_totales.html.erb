<main role="main" class="inner cover">
  <h1>Todas las pollas</h1>
  <hr>
  <table class="table table-striped table-bordered table-hover table-light">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Usuario</th>
      <th>Puntaje</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
    <% @pollas.each do |polla| %>
      <tr>
        <td><%= polla.id %></td>
        <td><%= polla.name %> </td>
        <td><%= polla.user.name %></td>
        <td><%= polla.score %></td>
        <% if polla.valid_polla == 1 %>
          <td><%= 'Pagada' %></td>
          <% if current_user.is_admin || current_user.is_mod || current_user.id == 19%>
            <td><a href=<%=invalidar_polla_path(polla)%>>Invalidar</a></td>
            <td><%= link_to 'Eliminar', polla, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        <% else %>
          <% if polla.paying == 1 %>
            <td><%= 'Pago en proceso' %> </td>
          <% else %>
            <td><%= 'No pagada'%></td>
          <%end%>
          <% if current_user.is_admin || current_user.is_mod || current_user.id == 19%>
            <td><a href=<%=validar_polla_path(polla)%>>Validar</a></td>
            <td><%= link_to 'Eliminar', polla, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        <% end %>
        
        
    </tr>
    <% end %>
    </tbody>
  </table>
</main>