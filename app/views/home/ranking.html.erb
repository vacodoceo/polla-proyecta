<main role="main" class="inner cover">
  <h1 class="display-4">Ranking</h1>
  <hr>
  <table class="table table-striped table-bordered table-hover table-light">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Usuario</th>
        <th>Puntaje</th>
      </tr>
    </thead>

      <tbody>
      <% @pollas.each do |polla| %>
        <tr>

          <td><%= polla.id %></td>
          <td><%= polla.name %> </td>
          <td><%= polla.user.name %></td>
          <td><%= polla.score %></td>
          
      </tr>
      <% end %>
      </tbody>
  </table>
</main>